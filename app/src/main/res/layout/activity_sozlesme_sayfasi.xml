<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sozlesmearka"
    tools:context=".sozlesmeSayfasi"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="320dp"
        android:layout_height="37dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="46dp"
        android:gravity="center"
        android:text="Müşteri Bilgileri"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/soztcara"
        android:layout_width="206dp"
        android:layout_height="32dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/edittextarkaplan"
        android:backgroundTint="@color/design_default_color_background"
        android:ems="10"
        android:hint="TC Ara:"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/tvm"
        app:layout_constraintEnd_toStartOf="@+id/sozara"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.052" />

    <TextView
        android:id="@+id/tvm"
        android:layout_width="320dp"
        android:layout_height="66dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="46dp"
        android:text="Müşteri Bilgileri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/tvhasar"
        android:layout_width="320dp"
        android:layout_height="37dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="46dp"
        android:gravity="center"
        android:text="Araç Bilgileri"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvm" />

    <Button
        android:id="@+id/sozaracara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:padding="5dp"
        android:text="ARA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvhasar" />

    <TextView
        android:id="@+id/tva"
        android:layout_width="320dp"
        android:layout_height="66dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="46dp"
        android:text="Araç Bilgileri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvhasar" />

    <EditText
        android:id="@+id/sozaracno"
        android:layout_width="206dp"
        android:layout_height="32dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/edittextarkaplan"
        android:backgroundTint="@color/design_default_color_background"
        android:ems="10"
        android:hint="Arac No:"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/tva"
        app:layout_constraintEnd_toStartOf="@+id/sozaracara"
        app:layout_constraintHorizontal_bias="0.866"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvhasar"
        app:layout_constraintVertical_bias="0.312" />

    <Button
        android:id="@+id/sozara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="32dp"
        android:padding="5dp"
        android:text="ARA"
        app:layout_constraintBottom_toTopOf="@+id/tvm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.038" />

    <Button
        android:id="@+id/satisekle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="126dp"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="50dp"
        android:text="SATIŞLARA EKLE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>